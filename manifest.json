{
  "manifest_version": 3,
  "name": "YouTube Playlist Loop Enabler",
  "version": "1.0",
  "permissions": ["tabs", "scripting", "storage", "activeTab"],
  "host_permissions": ["https://www.youtube.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*list=*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "YT Playlist Loop Enabler"
  }
}


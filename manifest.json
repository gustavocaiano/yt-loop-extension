{
  "manifest_version": 3,
  "name": "YouTube Playlist Loop Enabler",
  "version": "1.0.0",
  "description": "Automatically enables loop playlist mode on YouTube playlist pages",
  "permissions": [],
  "host_permissions": ["https://www.youtube.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*list=*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "YT Playlist Loop Enabler"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

